# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index

GET        /login               controllers.UserController.login
GET        /register            controllers.RegisterController.register

GET        /gallery             controllers.GalleryController.gallery
GET        /view                controllers.GalleryController.view
GET        /appraisal           controllers.GalleryController.appraisal

GET        /checkout            controllers.PaymentController.checkout

GET        /contact             controllers.Application.contact


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)